<%# This component handles exam deletion button %>
<% if (user.role === 'teacher' && (exam.createdBy._id.toString() === user._id.toString() || user.role === 'admin')) { %>
    <form action="/exams/<%= exam._id %>" 
          method="POST" 
          class="d-inline"
          onsubmit="return confirm('Are you sure you want to delete this exam? This action cannot be undone.');">
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash"></i> Delete Exam
        </button>
    </form>
<% } %> 