<%- contentFor('body') %>

<div class="container">
    <h1 class="mb-4">Dashboard</h1>

    <% if (user.role === 'student') { %>
        <!-- Student Dashboard -->
        <div class="row">
            <!-- Upcoming Exams -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Upcoming Exams</h5>
                    </div>
                    <div class="card-body">
                        <% if (upcomingExams && upcomingExams.length > 0) { %>
                            <div class="list-group">
                                <% upcomingExams.forEach(exam => { %>
                                    <a href="/exams/<%= exam._id %>" class="list-group-item list-group-item-action">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1"><%= exam.title %></h6>
                                            <small class="text-muted">
                                                <%= new Date(exam.startDate).toLocaleDateString() %>
                                            </small>
                                        </div>
                                        <p class="mb-1 text-muted small">Duration: <%= exam.duration %> minutes</p>
                                    </a>
                                <% }); %>
                            </div>
                        <% } else { %>
                            <p class="text-muted mb-0">No upcoming exams</p>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Recent Results -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Recent Results</h5>
                    </div>
                    <div class="card-body">
                        <% if (recentResults && recentResults.length > 0) { %>
                            <div class="list-group">
                                <% recentResults.forEach(result => { %>
                                    <div class="list-group-item">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1"><%= result.examId.title %></h6>
                                            <span class="badge bg-<%= result.status === 'PASS' ? 'success' : 'danger' %>">
                                                <%= result.status %>
                                            </span>
                                        </div>
                                        <p class="mb-1">Score: <%= result.percentage.toFixed(1) %>%</p>
                                        <small class="text-muted">
                                            <%= new Date(result.createdAt).toLocaleDateString() %>
                                        </small>
                                    </div>
                                <% }); %>
                            </div>
                        <% } else { %>
                            <p class="text-muted mb-0">No results yet</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

    <% } else if (user.role === 'teacher' || user.role === 'admin') { %>
        <!-- Teacher/Admin Dashboard -->
        <div class="row">
            <!-- Recent Exams -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">Recent Exams</h5>
                        <a href="/exams/create" class="btn btn-primary btn-sm">
                            <i class="fas fa-plus"></i> Create Exam
                        </a>
                    </div>
                    <div class="card-body">
                        <% if (exams && exams.length > 0) { %>
                            <div class="list-group">
                                <% exams.forEach(exam => { %>
                                    <a href="/exams/<%= exam._id %>" class="list-group-item list-group-item-action">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1"><%= exam.title %></h6>
                                            <span class="badge bg-<%= 
                                                exam.status === 'PUBLISHED' ? 'success' :
                                                exam.status === 'DRAFT' ? 'secondary' :
                                                'primary' %>">
                                                <%= exam.status %>
                                            </span>
                                        </div>
                                        <p class="mb-1 text-muted small">
                                            Questions: <%= exam.questions.length %> |
                                            Total Marks: <%= exam.totalMarks %>
                                        </p>
                                    </a>
                                <% }); %>
                            </div>
                        <% } else { %>
                            <p class="text-muted mb-0">No exams created yet</p>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Pending Evaluations -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Pending Evaluations</h5>
                    </div>
                    <div class="card-body">
                        <% if (pendingEvaluations && pendingEvaluations.length > 0) { %>
                            <div class="list-group">
                                <% pendingEvaluations.forEach(submission => { %>
                                    <a href="/exams/<%= submission.examId._id %>/submissions/<%= submission._id %>" 
                                       class="list-group-item list-group-item-action">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1"><%= submission.examId.title %></h6>
                                            <small class="text-muted">
                                                <%= new Date(submission.submittedAt).toLocaleDateString() %>
                                            </small>
                                        </div>
                                        <p class="mb-1">Student: <%= submission.studentId.name %></p>
                                    </a>
                                <% }); %>
                            </div>
                        <% } else { %>
                            <p class="text-muted mb-0">No pending evaluations</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    <% } %>

    <!-- Quick Stats -->
    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h6 class="card-title">Total Exams</h6>
                    <h2 class="mb-0"><%= typeof totalExams !== 'undefined' ? totalExams : '0' %></h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h6 class="card-title">Completed Exams</h6>
                    <h2 class="mb-0"><%= typeof completedExams !== 'undefined' ? completedExams : '0' %></h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h6 class="card-title">Average Score</h6>
                    <h2 class="mb-0"><%= typeof averageScore !== 'undefined' ? averageScore.toFixed(1) + '%' : '0%' %></h2>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h6 class="card-title">Pending</h6>
                    <h2 class="mb-0"><%= typeof pendingExams !== 'undefined' ? pendingExams : '0' %></h2>
                </div>
            </div>
        </div>
    </div>
</div> 