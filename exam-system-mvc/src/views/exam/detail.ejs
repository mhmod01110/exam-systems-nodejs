<div class="container">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-start mb-4">
        <div>
            <h1 class="mb-1"><%= exam.title %></h1>
            <p class="text-muted mb-0">
                Created by <%= exam.createdBy.name %> | 
                Department: <%= exam.department %>
            </p>
        </div>
        <div class="d-flex gap-2">
            <% if (user.role === 'teacher' && 
                  (exam.createdBy._id.toString() === user._id.toString() || 
                   user.role === 'admin')) { %>
                <a href="/exams/<%= exam._id %>/edit" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <% if (exam.status === 'DRAFT') { %>
                    <form action="/exams/<%= exam._id %>/publish" method="POST" class="d-inline">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-check-circle"></i> Publish
                        </button>
                    </form>
                <% } %>
                <form action="/exams/<%= exam._id %>" 
                      method="POST" 
                      class="d-inline"
                      onsubmit="return confirm('Are you sure you want to delete this exam?');">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Delete
                    </button>
                </form>
            <% } %>
            <a href="/exams" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Exams
            </a>
        </div>
    </div>

    <!-- Status Alert -->
    <div class="alert alert-<%= 
        exam.status === 'PUBLISHED' ? 'success' :
        exam.status === 'DRAFT' ? 'secondary' :
        exam.status === 'IN_PROGRESS' ? 'primary' :
        exam.status === 'COMPLETED' ? 'info' :
        'dark' %>">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <strong>Status:</strong> <%= exam.status %>
            </div>
            <% if (exam.status === 'PUBLISHED' && user.role === 'student') { %>
                <form action="/exams/<%= exam._id %>/start" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-play"></i> Start Exam
                    </button>
                </form>
            <% } %>
        </div>
    </div>

    <div class="row">
        <!-- Main Content -->
        <div class="col-md-8">
            <!-- Description -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Description</h5>
                </div>
                <div class="card-body">
                    <p class="mb-0"><%= exam.description || 'No description provided' %></p>
                </div>
            </div>

            <!-- Instructions -->
            <% if (exam.instructions) { %>
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Instructions</h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-info mb-0">
                            <%= exam.instructions %>
                        </div>
                    </div>
                </div>
            <% } %>

            <!-- Questions Section -->
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Questions</h5>
                    <% if (user.role === 'teacher' && 
                          (exam.createdBy._id.toString() === user._id.toString() || 
                           user.role === 'admin')) { %>
                        <a href="/exams/<%= exam._id %>/questions/create" class="btn btn-primary btn-sm">
                            <i class="fas fa-plus"></i> Add Question
                        </a>
                    <% } %>
                </div>
                <div class="card-body">
                    <% if (exam.questions.length === 0) { %>
                        <div class="alert alert-warning mb-0">
                            <i class="fas fa-exclamation-triangle"></i> No questions added yet.
                        </div>
                    <% } else { %>
                        <div class="list-group">
                            <% exam.questions.forEach((question, index) => { %>
                                <div class="list-group-item">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <h6 class="mb-1">Question <%= index + 1 %></h6>
                                            <p class="mb-1 text-muted">
                                                <%= question.text.substring(0, 100) %>...
                                            </p>
                                            <small>
                                                Type: <span class="badge bg-info"><%= question.type %></span>
                                                Marks: <span class="badge bg-secondary"><%= question.marks %></span>
                                            </small>
                                        </div>
                                        <% if (user.role === 'teacher' && 
                                              (exam.createdBy._id.toString() === user._id.toString() || 
                                               user.role === 'admin')) { %>
                                            <div class="btn-group">
                                                <a href="/exams/<%= exam._id %>/questions/<%= question._id %>" 
                                                   class="btn btn-sm btn-info">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="/exams/<%= exam._id %>/questions/<%= question._id %>/edit" 
                                                   class="btn btn-sm btn-primary">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-md-4">
            <!-- Exam Information -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Exam Information</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2">
                            <i class="fas fa-clock"></i>
                            Duration: <%= exam.duration %> minutes
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-calendar-alt"></i>
                            Start Date: <%= new Date(exam.startDate).toLocaleString() %>
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-calendar-times"></i>
                            End Date: <%= new Date(exam.endDate).toLocaleString() %>
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-star"></i>
                            Total Marks: <%= exam.totalMarks %>
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check-circle"></i>
                            Passing Marks: <%= exam.passingMarks %>
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-question-circle"></i>
                            Type: <%= exam.type %>
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-redo"></i>
                            Maximum Attempts: <%= exam.maxAttempts %>
                        </li>
                        <% if (exam.resultReleaseDate) { %>
                            <li class="mb-2">
                                <i class="fas fa-chart-bar"></i>
                                Results Release: <%= new Date(exam.resultReleaseDate).toLocaleString() %>
                            </li>
                        <% } %>
                    </ul>
                </div>
            </div>

            <!-- Settings -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Settings</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2">
                            <i class="fas fa-random"></i>
                            Shuffle Questions: 
                            <span class="badge bg-<%= exam.shuffleQuestions ? 'success' : 'danger' %>">
                                <%= exam.shuffleQuestions ? 'Yes' : 'No' %>
                            </span>
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-eye"></i>
                            Show Results: 
                            <span class="badge bg-<%= exam.showResults ? 'success' : 'danger' %>">
                                <%= exam.showResults ? 'Yes' : 'No' %>
                            </span>
                        </li>
                        <li>
                            <i class="fas fa-globe"></i>
                            Public Access: 
                            <span class="badge bg-<%= exam.isPublic ? 'success' : 'danger' %>">
                                <%= exam.isPublic ? 'Yes' : 'No' %>
                            </span>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Student Attempts -->
            <% if (user.role === 'student' && attempts && attempts.length > 0) { %>
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Your Attempts</h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group">
                            <% attempts.forEach(attempt => { %>
                                <a href="/exams/<%= exam._id %>/attempt/<%= attempt._id %>" 
                                   class="list-group-item list-group-item-action">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-1">Attempt <%= attempt.attemptNumber %></h6>
                                            <small class="text-muted">
                                                <%= new Date(attempt.startedAt).toLocaleString() %>
                                            </small>
                                        </div>
                                        <span class="badge bg-<%= 
                                            attempt.status === 'SUBMITTED' ? 'success' :
                                            attempt.status === 'IN_PROGRESS' ? 'primary' :
                                            'secondary' %>">
                                            <%= attempt.status %>
                                        </span>
                                    </div>
                                </a>
                            <% }); %>
                        </div>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>

<%- include('../partials/footer') %> 